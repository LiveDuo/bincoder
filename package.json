{
  "name": "bincoder",
  "version": "0.5.0",
  "description": "A binary encoder / decoder implementation in Typescript.",
  "main": "lib/bundle.js",
  "repository": "git@github.com:felicityin/bincoder.git",
  "author": "felicityin <yinjingping2022@gmail.com>",
  "homepage": "https://github.com/felicityin/bincoder#readme",
  "license": "MIT",
  "keywords": [
    "bincode",
    "rust",
    "serde"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "bundle": "tsc && parcel build lib/src/index.js --no-optimize --no-source-maps --cache-dir /tmp/.parcel-cache",
    "build": "tsc",
    "test": "jest",
    "format": "prettier -wu src/* __test__/*",
    "prepare": "husky install",
    "clean": "rm -rf lib",
    "release": "npm publish --access public.",
    "prepublishOnly": "yarn run test",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/felicityin/bincoder/issues"
  },
  "pre-commit": [
    "format"
  ],
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "husky": ">=6",
    "jest": "^29.6.0",
    "lint-staged": ">=10",
    "mrm": "2",
    "parcel": "^2.13.3",
    "pre-commit": "^1.2.2",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.1"
  },
  "lint-staged": {
    "*.src/*": "prettier --write"
  }
}
